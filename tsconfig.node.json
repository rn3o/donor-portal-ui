{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noImplicitAny": false, // Allows 'any' type implicitly
    "esModuleInterop": true, // Enables compatibility with CommonJS modules
  },
  "include": ["vite.config.ts"]
}
